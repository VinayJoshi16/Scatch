<%- include('./partials/header') %>

<% if (cartItems && cartItems.length > 0) { %>
    <div class="w-full min-h-screen flex items-start px-20 py-20 gap-10">

        <!-- Left: list of cart items -->
        <div class="w-[60%] flex flex-col gap-6">
            <% cartItems.forEach(function(item) { %>
                <div class="w-full rounded-md overflow-hidden border border-gray-200">
                    <div class="w-full h-64 flex justify-center items-center bg-[<%= item.product.bgcolor %>]">
                        <img
                            class="h-[15rem]"
                            src="data:image/jpeg;base64,<%= item.product.image.toString('base64') %>"
                            alt="<%= item.product.name %>"
                        >
                    </div>
                    <div class="w-full flex justify-between px-5 py-4 bg-[<%= item.product.panelcolor %>]">
                        <div>
                            <h3 class="text-2xl"><%= item.product.name %></h3>
                            <p class="text-sm opacity-70">
                                ₹ <%= item.product.price %> each
                                <% if (item.product.discount) { %>
                                    &nbsp;– ₹ <%= item.product.discount %> discount per item
                                <% } %>
                            </p>
                        </div>
                        <div class="flex items-center gap-2">
                            <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                            <div class="px-2 py-1 rounded-md bg-white text-black"><%= item.quantity %></div>
                            <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                        </div>
                    </div>
                    <div class="flex text-white items-center justify-between px-5 py-3 bg-[<%= item.product.textcolor %>]">
                        <h4 class="text-lg">Item Total</h4>
                        <h2 class="text-lg">
                            ₹ <%= ((Number(item.product.price) || 0) - (Number(item.product.discount) || 0)) * item.quantity %>
                        </h2>
                    </div>
                </div>
            <% }); %>
        </div>

        <!-- Right: overall cart summary -->
        <div class="w-[40%]">
            <h3 class="text-xl">Price Breakdown</h3>
            <div class="px-10 mt-5">
                <div class="flex mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>₹ <%= subtotal %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4>₹ <%= totalDiscount %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Platform Fee</h4>
                    <h4>₹ <%= platformFee %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black mt-10"></div>
            <div class="flex mt-5">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ <%= bill %></h3>
            </div>
        </div>

    </div>
<% } else { %>
    <div class="w-full h-screen flex items-center justify-center">
        <h3 class="text-2xl">Your cart is empty.</h3>
    </div>
<% } %>

<%- include('./partials/footer') %>

